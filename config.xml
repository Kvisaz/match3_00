<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        id          = "ru.zaxx.match3"
        versionCode = "12"
        version     = "1.0.2" >

    <!-- versionCode is optional and Android only -->

    <name>Happy Winter Match 3</name>

    <description>Free Winter Christmas Match 3 game</description>

    <author email="sergey.zoomaster@gmail.com" href="https://zaxx.ru">Sergey Tokarev</author>
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <plugin name="com.appodeal.plugin" spec="2.1.1" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="2.4.0" />
    <preference name="KeepRunning" value="true" />
    <preference name="buildArchitecture" value="x86" />
    <plugin name="cordova-build-architecture" spec="https://github.com/MBuchalik/cordova-build-architecture.git#v1.0.3" source="git" />


    <content src="index.html" />
    <access origin="*"/>

    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>

    <platform name="android">
        <allow-intent href="market:*"/>
        <preference name="enabled" value="true"/>
        <icon src="img/launcher_app_xxhdpi.png" />
        <preference name="AndroidLaunchMode" value="singleTop"/>
        <preference name="android-minSdkVersion" value="19" />
    </platform>


    <access origin="*"/>

    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="true" />
</widget>